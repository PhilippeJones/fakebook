%h1= @post.title

.pane
	.meta
		Posted by
		= @post.user.name
		= time_ago_in_words(@post.created_at)
		ago
	%p= @post.content

	- if @post.user == current_user
		= link_to "Edit", edit_post_path(@post)
		= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?"}

	%hr

	.comments
		%h2
			= @post.comments.count
			Replies

		= render @post.comments

		%h3 Reply
		= render "comments/form"